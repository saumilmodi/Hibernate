<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC 
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
 				"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class name="com.hib.Address" table="ADDRESS">
              
        <id name="id" type="long" column="ADDRESS_ID">            
            <generator class="increment"/>            
        </id>
        
        <property name="addressLine1" column="ADDRESS_Line" type="string" length="20"/>        
        <property name="city" column="ADDRESS_CITY" type="string" length="10"/>        
        <property name="zipcode" column="ADDRESS_ZIPCODE" type="string" length="10"/>
        
    </class>
    
</hibernate-mapping>
